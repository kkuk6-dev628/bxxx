<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="1dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lyt_home_favor_thumbnail"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/lyt_img_thumbnail"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.3">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_adver_thumbnail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/default_img"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_home_favor_thumbnail"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/default_img" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_news_top"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="-10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:src="@drawable/top_corner" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_home_favor_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.7"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/txt_home_favor_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:singleLine="false"
                    android:text="敬请期待敬请期待敬请期待敬请期待敬请期待敬请期"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14.5sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/img_properties"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical"
                            android:paddingTop="3dp">

                            <ImageView
                                android:id="@+id/img_property1"
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:padding="2dp"
                                android:singleLine="true"
                                android:visibility="gone"
                                android:src="@drawable/dizhi" />

                            <ImageView
                                android:id="@+id/img_property2"
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:padding="2dp"
                                android:singleLine="true"
                                android:visibility="gone"
                                android:src="@drawable/jingyan" />

                            <ImageView
                                android:id="@+id/img_property3"
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:padding="2dp"
                                android:singleLine="true"
                                android:visibility="gone"
                                android:src="@drawable/siji" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyt_property"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_properties"
                            android:orientation="vertical"
                            android:paddingTop="3dp">

                            <TextView
                                android:id="@+id/txt_property_val1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:singleLine="true"
                                android:text="中心区"
                                android:textColor="@color/colorSmallText"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/txt_property_val2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:singleLine="true"
                                android:text="2楼"
                                android:textColor="@color/colorSmallText"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/txt_property_val3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:singleLine="true"
                                android:text="150/平方米"
                                android:textColor="@color/colorSmallText"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"
                            android:layout_toRightOf="@id/lyt_property"
                            android:gravity="right"
                            android:orientation="vertical"
                            android:paddingLeft="1dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/item_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="2dp"
                                    android:layout_toRightOf="@id/lyt_property"
                                    android:gravity="right"
                                    android:maxLines="2"
                                    android:paddingLeft="1dp"
                                    android:text="价格：28万"
                                    android:textColor="#2cb3a3"
                                    android:textSize="9sp" />

                                <TextView
                                    android:id="@+id/txt_home_favor_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="2dp"
                                    android:layout_toRightOf="@id/lyt_property"
                                    android:gravity="right"
                                    android:maxLines="2"
                                    android:paddingLeft="1dp"
                                    android:text="价格：28万"
                                    android:textColor="@color/colorConfirmText"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="2dp"
                                android:layout_toRightOf="@id/lyt_property"
                                android:gravity="right"
                                android:paddingLeft="1dp"
                                android:text=""
                                android:textColor="#2cb3a3"
                                android:textSize="9sp" />
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_tel_time"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="3dp"
                android:clickable="true"
                android:src="@drawable/phone_category" />

            <TextView
                android:id="@+id/post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="08:45"
                android:textColor="#2cb3a3"
                android:textSize="9sp" />
        </LinearLayout>


    </FrameLayout>


</LinearLayout>
