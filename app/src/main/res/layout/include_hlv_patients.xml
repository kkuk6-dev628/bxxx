<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:id="@+id/relativeLayout3"
    android:paddingTop="2dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/lyt_patient_left"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
        <ImageView
            android:id="@+id/btn_left_patient"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:src="@drawable/navi_before_black"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:background="?android:selectableItemBackground"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/lyt_patient_right"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/btn_right_patient"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:src="@drawable/navi_next_black"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:background="?android:selectableItemBackground"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hlv_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lyt_patient_left"
        android:layout_toLeftOf="@+id/lyt_patient_right"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:overScrollMode="never"/>
</RelativeLayout>

