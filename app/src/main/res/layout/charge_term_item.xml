<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorBackground"
        android:layout_marginBottom="1dp"
        android:weightSum="3"
        android:layout_gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:textAlignment="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txt_charge_term_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:text="1-3天"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:paddingRight="10dp"
            android:layout_weight="2">
            <RelativeLayout
                android:id="@+id/rlt_charge_price_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="100dp"
                android:background="@color/colorBackground"
                android:paddingRight="10dp">
                <TextView
                    android:id="@+id/txt_charge_price_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="16sp"
                    android:text="20元/1天"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlt_charge_price_vip"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_modify_info_selector"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:layout_toRightOf="@id/rlt_charge_price_value">
                <TextView
                    android:id="@+id/txt_charge_price_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorComment"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="14sp"
                    android:text="90折"/>

            </RelativeLayout>
            <CheckBox
                android:id="@+id/term_chk"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:button="@drawable/custom_checkbox"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
