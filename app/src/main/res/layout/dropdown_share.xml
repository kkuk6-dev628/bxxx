<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorBackgroundGray"
        android:layout_marginBottom="5dp"
        android:weightSum="2"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:id="@+id/lyt_share_weixin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textAlignment="center">
                <ImageView
                    android:id="@+id/img_share_weixin"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_weixin"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:id="@+id/txt_share_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="分享好友"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/img_share_weixin" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:id="@+id/lyt_share_friends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textAlignment="center">
                <ImageView
                    android:id="@+id/img_share_friends"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/new_friends"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:id="@+id/txt_share_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="分享朋友圈"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/img_share_friends" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/lyt_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorBackgroundGray"
        android:layout_marginBottom="1dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textAlignment="center">
                <TextView
                    android:id="@+id/txt_share_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="取    消"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
