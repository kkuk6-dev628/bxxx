<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorBackground"
        android:layout_marginBottom="1dp"
        android:weightSum="3"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/lyt_dropdown_sub_first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textAlignment="center">
                <TextView
                    android:id="@+id/txt_dropdown_sub_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="百姓币充值"/>
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/lyt_dropdown_sub_second"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textAlignment="center">
            <TextView
                android:id="@+id/txt_dropdown_sub_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="13sp"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2018.05.00"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyt_dropdown_sub_third"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textAlignment="center">
            <TextView
                android:id="@+id/txt_dropdown_sub_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="13sp"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="+300"/>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>


</RelativeLayout>
