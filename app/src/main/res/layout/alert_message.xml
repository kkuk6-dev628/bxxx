<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_lang"
    android:background="@drawable/alert_dialog_lang_shape">

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/alert_dialog_top_button_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:singleLine="false"
        android:text="@string/str_logout"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#95959595" />

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/alert_dialog_bottom_button_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/str_ok"
        android:textColor="@color/blue_4285f4"
        android:textSize="14sp" />
</LinearLayout>
