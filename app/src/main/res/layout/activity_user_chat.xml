<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.reservation.app.baixingxinwen.activity.NewsActivity">

    <LinearLayout
        android:id="@+id/lyt_web_notification_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vline"
        android:layout_centerInParent="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:clickable="true"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/lyt_web_img_thumbnail"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_web_notification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/z" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/img_favor_thumbnail"
            android:layout_toRightOf="@+id/img_favor_thumbnail"
            android:layout_weight="3.3"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/txt_web_notification_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:text="网站通知"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_web_notification_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/txt_web_notification_name"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_web_notification_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorSmallText"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_web_notification_last_title"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorSmallText"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:id="@+id/vline_web"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:background="@color/colorTabBackground"
        android:layout_below="@+id/lyt_web_notification_thumbnail"/>

    <LinearLayout
        android:id="@+id/lyt_master_notification_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vline_web"
        android:layout_centerInParent="true"
        android:layout_marginBottom="7dp"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/lyt_img_thumbnail"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_chat_friend"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/img_favor_thumbnail"
            android:layout_toRightOf="@+id/img_favor_thumbnail"
            android:layout_weight="3.3"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/txt_master_notification_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:text="站长通知"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_master_notification_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/txt_master_notification_name"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_master_notification_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorSmallText"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_master_notification_last_title"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorSmallText"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorTabBackground"
        android:id="@+id/lyt_web_space"
        android:layout_below="@+id/lyt_master_notification_thumbnail"/>

    <View
        android:id="@+id/vline"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/relativeLayout"
        android:background="@color/colorTabBackground" />

    <ListView
        android:id="@+id/lst_chat_friends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lyt_web_space"
        android:overScrollMode="never" />
</RelativeLayout>