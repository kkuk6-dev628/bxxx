<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReportActivity"
    android:id="@+id/activity_report"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_report"
        tools:showIn="@layout/activity_report">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:focusable="auto"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/new_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"

                        android:text="请点击选择举报类别：" />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorHomeBackground"
                android:paddingTop="8dp">
                <RelativeLayout
                    android:id="@+id/rlt_my_news"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txt_report_adver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="16sp"
                        android:text="广告垃圾"/>
                    <CheckBox
                        android:id="@+id/chk_report_adver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:background="@color/colorBackground"
                        android:button="@drawable/custom_checkbox"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlt_my_history"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:background="@color/colorBackground"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txt_report_norule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="16sp"
                        android:text="违规内容"/>
                    <CheckBox
                        android:id="@+id/chk_report_norule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@color/colorBackground"
                        android:button="@drawable/custom_checkbox"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlt_my_save"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/txt_report_ugly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="16sp"
                        android:text="恶意灌水"/>
                    <CheckBox
                        android:id="@+id/chk_report_ugly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/colorBackground"
                        android:layout_gravity="center"
                        android:button="@drawable/custom_checkbox"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlt_my_safe"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/txt_report_repeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="16sp"
                        android:text="重复发帖"/>
                    <CheckBox
                        android:id="@+id/chk_report_repeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@color/colorBackground"
                        android:button="@drawable/custom_checkbox"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/colorHomeBackground">

                    <RelativeLayout
                        android:id="@+id/rlt_input_report"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:clickable="true"
                        android:padding="10dp"
                        android:background="@color/colorBackground">
                        <TextView
                            android:id="@+id/txt_input_data18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="举报理由："
                            android:layout_alignParentTop="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:layout_toRightOf="@id/img_need18"/>
                        <EditText
                            android:id="@+id/edit_report_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="top"
                            android:layout_below="@id/txt_input_data18"
                            android:background="#00000000"
                            android:inputType="textMultiLine"
                            android:maxLength="30"
                            android:hint=""
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorBackground"
                android:layout_marginTop="1dp"
                android:padding="15dp"
                android:layout_gravity="bottom"
                app:layout_anchorGravity="bottom|end">
                <RelativeLayout
                    android:id = "@+id/rlt_report_data"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_call_phone_selector"
                    android:layout_centerVertical="true"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorBackground"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="18sp"
                        android:text="提交"/>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
