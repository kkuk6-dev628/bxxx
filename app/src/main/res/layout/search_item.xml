<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/lyt_home_favor_thumbnail"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:id="@+id/lyt_img_thumbnail"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4">

            <ImageView
                android:id="@+id/img_adver_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_img"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_home_favor_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_img" />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="-35dp"
                android:id="@+id/img_news_top"
                android:adjustViewBounds="true"
                android:src="@drawable/new_detail_top_etc"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_home_favor_desc"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.6"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/lyt_home_favor_thumbnail"
            android:layout_toEndOf="@+id/lyt_home_favor_thumbnail">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/txt_home_favor_desc"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="敬请期待敬请期待敬请期待敬请期待敬请期待敬请期"
                android:singleLine="false"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/img_search"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_property1"
                            android:textSize="10sp"
                            android:layout_marginRight="2dp"
                            android:textColor="@color/colorSmallText"
                            android:text="所属地区："
                            android:singleLine="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_property2"
                            android:textSize="10sp"
                            android:layout_marginRight="2dp"
                            android:textColor="@color/colorSmallText"
                            android:text="楼层："
                            android:singleLine="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_property3"
                            android:textSize="10sp"
                            android:layout_marginRight="2dp"
                            android:textColor="@color/colorSmallText"
                            android:text="面积："
                            android:singleLine="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lyt_property"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/img_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_property_val1"
                            android:textSize="10sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/colorSmallText"
                            android:text="中心区"
                            android:singleLine="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_property_val2"
                            android:textSize="10sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/colorSmallText"
                            android:text="2楼"
                            android:singleLine="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_property_val3"
                            android:textSize="10sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/colorSmallText"
                            android:text="150/平方米"
                            android:singleLine="true" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/lyt_property"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="1dp"
                        android:gravity="right"
                        android:id="@+id/txt_home_favor_price"
                        android:textSize="15sp"
                        android:layout_marginRight="2dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorConfirmText"
                        android:maxLines="2"
                        android:text="价格：28万"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
